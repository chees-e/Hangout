<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/eventOwnerPicture"
                android:padding="12dp"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/eventOwnerPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/event_owner_picture" />

            <TextView
                android:id="@+id/findLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventOwnerPicture"/>

            <TextView
                android:id="@+id/findStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findLocationName"/>
            <TextView
                android:id="@+id/findStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findLocationName"
                android:layout_toEndOf="@id/findStartDate"/>

            <TextView
                android:id="@+id/findEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findLocationName"
                android:layout_toEndOf="@id/findStartTime"
                />

            <TextView
                android:id="@+id/findEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findLocationName"
                android:layout_toEndOf="@id/findEndDate"
                />



            <TextView
                android:id="@+id/findDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findEndTime"/>
            <TextView
                android:id="@+id/findAttendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/findDescription"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>